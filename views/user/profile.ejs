
<div class="col-sm-12">
<h3>โปรไพล์</h3><hr/>
  <form class="form-horizontal" method="post" action="/users/profile">
    <div class="form-group">
      <label for="inputFirstname" class="col-sm-2 control-label">ชื่อ</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputFirstname" name="firstname" value="<%= profile.profile.firstname %>" placeholder="ชื่อ">
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastname" class="col-sm-2 control-label">นามสกุล</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputLastname" name="lastname" value="<%= profile.profile.lastname %>" placeholder="นามสกุล">
      </div>
    </div>
    <div class="form-group">
      <label for="inputLocation" class="col-sm-2 control-label">ที่อยู่</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputLocation" name="location" value="<%= profile.profile.location %>" placeholder="ที่อยู่">
      </div>
    </div>
    <div class="form-group">
      <label for="inputBio" class="col-sm-2 control-label">คำแนะนำตัว</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="3" id="inputBio" name="bio" placeholder="คำแนะนำตัว"><%= profile.profile.bio %></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save fa-fw"></i> อัพเดต</button>
      </div>
    </div>
  </form>
</div>
