<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <tbody>
        <% posts.forEach(function(post, i){ %>
          <tr>
            <td class="text-left" style="width:20%"><img class="img-thumbnail" src="<%= getPicture(post.picture) %>"/></td>
            <td class="text-left">
              <h4><a href="/posts/<%= post._id %>"><%= post.title %></a></h4>
              <%= post.description %><br/>
              <% post.tags.split(',').forEach((tag) => { %>
                <span class="label label-default"><%= tag %></span>
              <% }) %><br/>
              <small>
                <i class="fa fa-eye fa-fw"></i> <%= post.view %>,
                <%= moment(post.created_at).format('D MMMM YYYY') %>,
                <%= moment(post.created_at).fromNow() %>
              </small>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <%- include('./pagging.ejs'); %>
  </div>
</div>
